{
  "extends": "./tsconfig.base.json",
  "include": [
    ".next/types",
    "app",
    "components",
    "next-env.d.ts",
    "pages",
    "types",
    "admin",                    // ‚Üê Add this line
    ".next/types/**/*.ts",
    "lib",
    "lib/admin",
    "_pages-legacy"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/admin/*": ["admin/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/lib/*": ["lib/*"]
    },
    "jsx": "preserve",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "maxNodeModuleJsDepth": 2,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "skipLibCheck": true,
    "types": [
      "next",
      "next/image-types/global",
      "node"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "outDir": ".lint-tmp",
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
